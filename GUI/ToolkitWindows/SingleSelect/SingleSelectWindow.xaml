<Window x:Class="TerminologyLauncher.GUI.ToolkitWindows.SingleSelect.SingleSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SingleSelectWindow" Height="187" Width="494"
        Style="{DynamicResource TerminologyWindowStyle}"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TerminologyLauncher.GUI;component/Styles/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top" CornerRadius="8,8,0,0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#4C4EE8E8" Offset="0"/>
                    <GradientStop Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel x:Name="HeadBarPanel" MouseLeftButtonDown="HeadBarPanel_OnMouseLeftButtonDown"    Height="30" Background="Transparent" >

                <TextBlock DockPanel.Dock="Left" Margin="8,8,0,0" Style="{StaticResource TerminologyTextBlockStyle}" Text="{Binding Title}"></TextBlock>
                <StackPanel  Background="Transparent" DockPanel.Dock="Right" HorizontalAlignment="Right" >
                    <Button x:Name="CloseButton" x:FieldModifier="public"  Style="{DynamicResource TerminologyHeadCloseButtonStyle}" Margin="0,8,15,0" Click="CloseButton_OnClick" />
                </StackPanel>
            </DockPanel>
        </Border>
        <Canvas  DockPanel.Dock="Bottom">
            <TextBlock Name="FieldTextBlock"  Text="{Binding FieldName}" Canvas.Right="330" Canvas.Top="55" FontSize="15" Style="{StaticResource TerminologyTextBlockStyle}" Canvas.Left="10" TextAlignment="Right" RenderTransformOrigin="0.5,0.5" Width="119"/>
            <ComboBox Name="SelectComboBox" 
                      x:FieldModifier="public" 
                      Height="25"
                      Canvas.Left="149" 
                      Canvas.Top="50" 
                      Width="282"
                      SelectedIndex="1" 
                      FontSize="15" 
                      HorizontalContentAlignment="Center" 
                      ItemsSource="{Binding SelectItems}"
                      Style="{DynamicResource TerminologyComboBoxStyle}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource TerminologyTextBlockStyle}" Text="{Binding Key}"></TextBlock>
                            <TextBlock Style="{DynamicResource TerminologyTextBlockStyle}" Text="{Binding Value}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <!--<ComboBoxItem Content="离线模式" HorizontalAlignment="Stretch" Width="118"/>
                <ComboBoxItem Content="正版登录" HorizontalAlignment="Stretch" Width="118"/>-->


            </ComboBox>
            <Button x:Name="ConfirmButton" Content="确定" Style="{DynamicResource TerminologyConfigButtonStyle}" Canvas.Left="364" Canvas.Top="99" Height="30" Width="102" FontSize="16" Background="#FF77FF77" Click="ConfirmButton_Click" />

        </Canvas>
    </DockPanel>
</Window>
